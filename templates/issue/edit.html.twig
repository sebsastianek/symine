{% extends 'base.html.twig' %}

{% block title %}Edit Issue #{{ issue.id }} - {{ project.name }} - Redmine{% endblock %}

{% block main %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {# Breadcrumb #}
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm">
            <li>
                <a href="{{ path('project_index') }}" class="text-gray-500 hover:text-gray-700">Projects</a>
            </li>
            <li>
                <span class="text-gray-400">/</span>
            </li>
            <li>
                <a href="{{ path('project_show', {'id': project.id}) }}" class="text-gray-500 hover:text-gray-700">
                    {{ project.name }}
                </a>
            </li>
            <li>
                <span class="text-gray-400">/</span>
            </li>
            <li>
                <a href="{{ path('issue_index', {'projectId': project.id}) }}" class="text-gray-500 hover:text-gray-700">
                    Issues
                </a>
            </li>
            <li>
                <span class="text-gray-400">/</span>
            </li>
            <li>
                <a href="{{ path('issue_show', {'projectId': project.id, 'id': issue.id}) }}" class="text-gray-500 hover:text-gray-700">
                    #{{ issue.id }}
                </a>
            </li>
            <li>
                <span class="text-gray-400">/</span>
            </li>
            <li class="text-gray-900 font-medium">Edit</li>
        </ol>
    </nav>

    {# Page Header #}
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Edit Issue #{{ issue.id }}</h1>
            <p class="mt-1 text-sm text-gray-500">
                {{ issue.subject }}
            </p>
        </div>
        <a href="{{ path('issue_show', {'projectId': project.id, 'id': issue.id}) }}"
           class="text-sm text-gray-600 hover:text-gray-900">
            ‚Üê Back to Issue
        </a>
    </div>

    {# Form #}
    {% include 'issue/_form.html.twig' %}
</div>
{% endblock %}
