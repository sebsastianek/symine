{% extends 'base.html.twig' %}

{% block title %}Issues - {{ project.name }} - Redmine{% endblock %}

{% block main %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {# Breadcrumb #}
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm">
            <li>
                <a href="{{ path('project_index') }}" class="text-gray-500 hover:text-gray-700">Projects</a>
            </li>
            <li>
                <span class="text-gray-400">/</span>
            </li>
            <li>
                <a href="{{ path('project_show', {'id': project.id}) }}" class="text-gray-500 hover:text-gray-700">
                    {{ project.name }}
                </a>
            </li>
            <li>
                <span class="text-gray-400">/</span>
            </li>
            <li class="text-gray-900 font-medium">Issues</li>
        </ol>
    </nav>

    {# Page Header #}
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Issues</h1>
            <p class="mt-1 text-sm text-gray-500">
                {{ issues|length }} issue(s) in {{ project.name }}
            </p>
        </div>

        {% if can_create %}
            <a href="{{ path('issue_new', {'projectId': project.id}) }}"
               class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                New Issue
            </a>
        {% endif %}
    </div>

    {# Issues Table #}
    <div class="bg-white shadow-sm rounded-lg overflow-hidden">
        {% if issues is empty %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No issues</h3>
                <p class="mt-1 text-sm text-gray-500">Get started by creating a new issue.</p>
                {% if can_create %}
                    <div class="mt-6">
                        <a href="{{ path('issue_new', {'projectId': project.id}) }}"
                           class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                            </svg>
                            New Issue
                        </a>
                    </div>
                {% endif %}
            </div>
        {% else %}
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            #
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Tracker
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Subject
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Assigned
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Updated
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for issue in issues %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                <a href="{{ path('issue_show', {'projectId': project.id, 'id': issue.id}) }}"
                                   class="text-blue-600 hover:text-blue-900">
                                    #{{ issue.id }}
                                </a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    {{ issue.tracker.name }}
                                </span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-900">
                                <a href="{{ path('issue_show', {'projectId': project.id, 'id': issue.id}) }}"
                                   class="hover:text-blue-600">
                                    {{ issue.subject }}
                                    {% if issue.isPrivate %}
                                        <span class="text-red-500">ðŸ”’</span>
                                    {% endif %}
                                </a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {% if issue.status.isClosed %}bg-gray-100 text-gray-800{% else %}bg-green-100 text-green-800{% endif %}">
                                    {{ issue.status.name }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {% if issue.assignedTo %}
                                    {{ issue.assignedTo.firstname }} {{ issue.assignedTo.lastname }}
                                {% else %}
                                    <span class="text-gray-400">-</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ issue.updatedOn|date('Y-m-d H:i') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>
{% endblock %}
