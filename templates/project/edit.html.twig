{% extends 'base.html.twig' %}

{% block title %}Edit Project: {{ project.name }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    {# Breadcrumb #}
    <nav class="flex mb-4 text-sm text-gray-600">
        <a href="{{ path('project_index') }}" class="hover:text-blue-600">Projects</a>
        <span class="mx-2">/</span>
        <a href="{{ path('project_show', {id: project.id}) }}" class="hover:text-blue-600">{{ project.name }}</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">Edit</span>
    </nav>

    {# Page header #}
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Project</h1>

    {# Flash messages #}
    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    {# Form #}
    <div class="bg-white shadow-md rounded-lg p-6">
        {% include 'project/_form.html.twig' %}
    </div>
</div>
{% endblock %}
