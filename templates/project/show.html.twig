{% extends 'base.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    {# Breadcrumb #}
    <nav class="flex mb-4 text-sm text-gray-600">
        <a href="{{ path('project_index') }}" class="hover:text-blue-600">Projects</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">{{ project.name }}</span>
    </nav>

    {# Flash messages #}
    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    {# Project header #}
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <div class="flex justify-between items-start mb-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ project.name }}</h1>
                <div class="flex items-center space-x-4 text-sm">
                    {% if project.status == 1 %}
                        <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs font-semibold">
                            Active
                        </span>
                    {% elseif project.status == 5 %}
                        <span class="px-2 py-1 bg-red-100 text-red-800 rounded-full text-xs font-semibold">
                            Closed
                        </span>
                    {% elseif project.status == 9 %}
                        <span class="px-2 py-1 bg-gray-100 text-gray-800 rounded-full text-xs font-semibold">
                            Archived
                        </span>
                    {% endif %}

                    {% if project.isPublic %}
                        <span class="text-green-600 text-xs">Public</span>
                    {% else %}
                        <span class="text-gray-500 text-xs">Private</span>
                    {% endif %}

                    {% if project.identifier %}
                        <span class="text-gray-500 text-xs">ID: {{ project.identifier }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="flex space-x-2">
                {% if can_edit %}
                    <a href="{{ path('project_edit', {id: project.id}) }}" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md text-sm">
                        Edit
                    </a>
                {% endif %}
                {% if is_granted('DELETE', project) %}
                    <form method="post" action="{{ path('project_delete', {id: project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this project?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_project_' ~ project.id) }}">
                        <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md text-sm">
                            Delete
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>

        {# Description #}
        {% if project.description %}
            <div class="mt-4 text-gray-700 border-t pt-4">
                <h2 class="text-lg font-semibold mb-2">Description</h2>
                <div class="prose max-w-none">
                    {{ project.description|nl2br }}
                </div>
            </div>
        {% endif %}
    </div>

    {# Project info and issues #}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {# Main content #}
        <div class="lg:col-span-2 space-y-6">
            {# Quick actions #}
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
                <div class="grid grid-cols-2 gap-4">
                    {% if is_granted('ISSUE_CREATE', project) %}
                        <a href="{{ path('issue_new', {id: project.id}) }}" class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
                            <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            <div>
                                <div class="font-medium">New Issue</div>
                                <div class="text-sm text-gray-500">Create a new issue</div>
                            </div>
                        </a>
                    {% endif %}

                    <a href="{{ path('issue_index', {id: project.id}) }}" class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
                        <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        <div>
                            <div class="font-medium">View Issues</div>
                            <div class="text-sm text-gray-500">Browse project issues</div>
                        </div>
                    </a>

                    {% if can_manage_members %}
                        <a href="{{ path('project_members', {id: project.id}) }}" class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
                            <svg class="w-8 h-8 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                            </svg>
                            <div>
                                <div class="font-medium">Members</div>
                                <div class="text-sm text-gray-500">Manage project members</div>
                            </div>
                        </a>
                    {% endif %}

                    {% if can_manage_versions %}
                        <a href="#" class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
                            <svg class="w-8 h-8 text-orange-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                            </svg>
                            <div>
                                <div class="font-medium">Versions</div>
                                <div class="text-sm text-gray-500">Manage versions</div>
                            </div>
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Sidebar #}
        <div class="space-y-6">
            {# Project details #}
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-lg font-bold text-gray-900 mb-4">Details</h2>
                <dl class="space-y-3 text-sm">
                    {% if project.homepage %}
                        <div>
                            <dt class="text-gray-500">Homepage</dt>
                            <dd class="mt-1">
                                <a href="{{ project.homepage }}" target="_blank" rel="noopener" class="text-blue-600 hover:text-blue-800">
                                    {{ project.homepage }}
                                </a>
                            </dd>
                        </div>
                    {% endif %}

                    {% if project.parent %}
                        <div>
                            <dt class="text-gray-500">Parent Project</dt>
                            <dd class="mt-1">
                                <a href="{{ path('project_show', {id: project.parent.id}) }}" class="text-blue-600 hover:text-blue-800">
                                    {{ project.parent.name }}
                                </a>
                            </dd>
                        </div>
                    {% endif %}

                    {% if project.inheritMembers and project.parent %}
                        <div>
                            <dt class="text-gray-500">Inherit Members</dt>
                            <dd class="mt-1 text-green-600">Yes</dd>
                        </div>
                    {% endif %}

                    <div>
                        <dt class="text-gray-500">Created</dt>
                        <dd class="mt-1">{{ project.createdOn ? project.createdOn|date('Y-m-d H:i') : 'N/A' }}</dd>
                    </div>

                    {% if project.updatedOn %}
                        <div>
                            <dt class="text-gray-500">Updated</dt>
                            <dd class="mt-1">{{ project.updatedOn|date('Y-m-d H:i') }}</dd>
                        </div>
                    {% endif %}
                </dl>
            </div>

            {# Subprojects #}
            {% if project.children|length > 0 %}
                <div class="bg-white shadow-md rounded-lg p-6">
                    <h2 class="text-lg font-bold text-gray-900 mb-4">Subprojects</h2>
                    <ul class="space-y-2">
                        {% for child in project.children %}
                            <li>
                                <a href="{{ path('project_show', {id: child.id}) }}" class="text-blue-600 hover:text-blue-800">
                                    {{ child.name }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
