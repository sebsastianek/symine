{% extends 'base.html.twig' %}

{% block title %}Members - {{ project.name }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    {# Breadcrumb #}
    <nav class="flex mb-4 text-sm text-gray-600">
        <a href="{{ path('project_index') }}" class="hover:text-blue-600">Projects</a>
        <span class="mx-2">/</span>
        <a href="{{ path('project_show', {id: project.id}) }}" class="hover:text-blue-600">{{ project.name }}</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">Members</span>
    </nav>

    {# Page header #}
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Project Members</h1>

    {# Flash messages #}
    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {# Current members list #}
        <div class="lg:col-span-2">
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Current Members ({{ members|length }})</h2>
                </div>

                {% if members is empty %}
                    <div class="p-6 text-center text-gray-500">
                        <svg class="mx-auto h-12 w-12 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                        <p>No members yet. Add the first member to this project.</p>
                    </div>
                {% else %}
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    User
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Roles
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Added
                                </th>
                                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for member in members %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div>
                                                <div class="text-sm font-medium text-gray-900">
                                                    {{ member.user.firstname }} {{ member.user.lastname }}
                                                </div>
                                                <div class="text-sm text-gray-500">
                                                    {{ member.user.login }}
                                                    {% if member.user.mail %}
                                                        &middot; {{ member.user.mail }}
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex flex-wrap gap-1">
                                            {% for memberRole in member.memberRoles %}
                                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                                    {{ memberRole.role.name }}
                                                </span>
                                            {% endfor %}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        {{ member.createdOn ? member.createdOn|date('Y-m-d') : 'N/A' }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <form method="post" action="{{ path('project_member_remove', {id: project.id, memberId: member.id}) }}" 
                                              onsubmit="return confirm('Are you sure you want to remove this member?');" 
                                              class="inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('remove_member_' ~ member.id) }}">
                                            <button type="submit" class="text-red-600 hover:text-red-900">
                                                Remove
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>

        {# Add member form #}
        <div>
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Add New Member</h2>

                {{ form_start(form) }}
                
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            {{ form_label(form.user) }}
                        </label>
                        {{ form_widget(form.user) }}
                        {{ form_errors(form.user) }}
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            {{ form_label(form.roles) }}
                        </label>
                        <div class="space-y-2">
                            {% for role in form.roles %}
                                <div class="flex items-start">
                                    <div class="flex items-center h-5">
                                        {{ form_widget(role) }}
                                    </div>
                                    <div class="ml-3 text-sm">
                                        <label for="{{ role.vars.id }}" class="font-medium text-gray-700">
                                            {{ form_label(role) }}
                                        </label>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.roles) }}
                    </div>

                    <div class="flex items-start">
                        <div class="flex items-center h-5">
                            {{ form_widget(form.mailNotification) }}
                        </div>
                        <div class="ml-3 text-sm">
                            <label for="{{ form.mailNotification.vars.id }}" class="font-medium text-gray-700">
                                {{ form.mailNotification.vars.label }}
                            </label>
                            {% if form.mailNotification.vars.help %}
                                <p class="text-gray-500">{{ form.mailNotification.vars.help }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="mt-6 flex justify-end space-x-3">
                    <a href="{{ path('project_show', {id: project.id}) }}" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md text-sm font-medium">
                        Add Member
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
