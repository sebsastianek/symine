{% extends 'admin/base.html.twig' %}

{% block title %}Edit Group - {{ group.name }}{% endblock %}
{% block page_title %}Edit Group - {{ group.name }}{% endblock %}

{% block body %}
<div class="max-w-4xl">
    <!-- Edit Group Name -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h4 class="text-md font-semibold text-gray-900 mb-4">Group Details</h4>
        <form method="post" action="{{ path('admin_group_edit', {id: group.id}) }}" class="space-y-6">
            <input type="hidden" name="action" value="update_group">

            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                    Group Name <span class="text-red-500">*</span>
                </label>
                <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    value="{{ group.name }}"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Enter group name"
                >
            </div>

            <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                <a href="{{ path('admin_group_index') }}" class="text-gray-600 hover:text-gray-900">
                    Back to Groups
                </a>
                <button
                    type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
                    Save Changes
                </button>
            </div>
        </form>
    </div>

    <!-- Current Members -->
    <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">Group Members ({{ group.groupsUsers|length }})</h4>
        </div>

        {% if group.groupsUsers is empty %}
            <div class="p-6 text-center text-gray-500">
                No users in this group yet. Add users below.
            </div>
        {% else %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Login
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Name
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for groupsUser in group.groupsUsers %}
                            {% set user = groupsUser.user %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    {{ user.login }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    {{ user.fullName }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <form method="post" action="{{ path('admin_group_remove_user', {id: group.id, userId: user.id}) }}" onsubmit="return confirm('Remove this user from the group?');" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('remove_user_' ~ group.id ~ '_' ~ user.id) }}">
                                        <button type="submit" class="text-red-600 hover:text-red-900">
                                            Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

    <!-- Add Members -->
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-md font-semibold text-gray-900 mb-4">Add Users to Group</h4>

        {% if available_users is empty %}
            <p class="text-gray-500">All active users are already in this group.</p>
        {% else %}
            <form method="post" action="{{ path('admin_group_edit', {id: group.id}) }}" class="space-y-4">
                <input type="hidden" name="action" value="add_users">

                <div class="max-h-96 overflow-y-auto border border-gray-200 rounded">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 sticky top-0">
                            <tr>
                                <th scope="col" class="px-4 py-3 text-left">
                                    <input
                                        type="checkbox"
                                        id="select_all"
                                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                                        onclick="document.querySelectorAll('input[name=\'user_ids[]\']').forEach(cb => cb.checked = this.checked)"
                                    >
                                </th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Login
                                </th>
                                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Name
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for user in available_users %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-4 py-3">
                                        <input
                                            type="checkbox"
                                            name="user_ids[]"
                                            value="{{ user.id }}"
                                            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                                        >
                                    </td>
                                    <td class="px-4 py-3 text-sm font-medium text-gray-900">
                                        {{ user.login }}
                                    </td>
                                    <td class="px-4 py-3 text-sm text-gray-500">
                                        {{ user.fullName }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="flex justify-end">
                    <button
                        type="submit"
                        class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    >
                        Add Selected Users
                    </button>
                </div>
            </form>
        {% endif %}
    </div>
</div>
{% endblock %}
