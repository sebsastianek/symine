{% extends 'admin/base.html.twig' %}

{% block title %}New Tracker{% endblock %}
{% block page_title %}New Tracker{% endblock %}

{% block body %}
<div class="bg-white rounded-lg shadow p-6 max-w-2xl">
    <form method="post">
        <div class="space-y-4">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                    Name <span class="text-red-500">*</span>
                </label>
                <input type="text" name="name" id="name" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-1">
                    Description
                </label>
                <textarea name="description" id="description" rows="3"
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            </div>

            <div>
                <label for="position" class="block text-sm font-medium text-gray-700 mb-1">
                    Position
                </label>
                <input type="number" name="position" id="position" value="1" min="1"
                       class="w-32 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <p class="text-sm text-gray-500 mt-1">Lower numbers appear first</p>
            </div>

            <div class="flex items-start">
                <div class="flex items-center h-5">
                    <input type="checkbox" name="is_in_roadmap" id="is_in_roadmap" checked
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                </div>
                <div class="ml-3 text-sm">
                    <label for="is_in_roadmap" class="font-medium text-gray-700">
                        Show in roadmap
                    </label>
                    <p class="text-gray-500">Display issues with this tracker in project roadmaps</p>
                </div>
            </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
            <a href="{{ path('admin_tracker_index') }}" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                Cancel
            </a>
            <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md text-sm font-medium">
                Create Tracker
            </button>
        </div>
    </form>
</div>
{% endblock %}
