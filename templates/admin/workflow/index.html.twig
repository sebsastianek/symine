{% extends 'admin/base.html.twig' %}

{% block title %}Workflow{% endblock %}
{% block page_title %}Workflow{% endblock %}

{% block body %}
<div class="max-w-4xl">
    <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Workflow Configuration</h3>
        <p class="text-gray-600">
            Configure which status transitions are allowed for each combination of tracker and role.
        </p>
    </div>

    <!-- Edit Workflow Section -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h4 class="text-md font-semibold text-gray-900 mb-4">Edit Workflow</h4>
        <form method="get" action="{{ path('admin_workflow_edit') }}" class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label for="tracker_id" class="block text-sm font-medium text-gray-700 mb-2">
                        Tracker <span class="text-red-500">*</span>
                    </label>
                    <select
                        id="tracker_id"
                        name="tracker_id"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                        <option value="">Select a tracker...</option>
                        {% for tracker in trackers %}
                            <option value="{{ tracker.id }}">{{ tracker.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    <label for="role_id" class="block text-sm font-medium text-gray-700 mb-2">
                        Role <span class="text-red-500">*</span>
                    </label>
                    <select
                        id="role_id"
                        name="role_id"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                        <option value="">Select a role...</option>
                        {% for role in roles %}
                            <option value="{{ role.id }}">{{ role.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div>
                <button
                    type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
                    Edit Workflow
                </button>
            </div>
        </form>
    </div>

    <!-- Copy Workflow Section -->
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-md font-semibold text-gray-900 mb-4">Copy Workflow</h4>
        <p class="text-sm text-gray-600 mb-4">
            Copy workflow transitions from one tracker/role combination to others.
        </p>

        <form method="post" action="{{ path('admin_workflow_copy') }}" class="space-y-4">
            <div class="border-b border-gray-200 pb-4">
                <h5 class="text-sm font-semibold text-gray-700 mb-3">Source</h5>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="source_tracker_id" class="block text-sm font-medium text-gray-700 mb-2">
                            Source Tracker <span class="text-red-500">*</span>
                        </label>
                        <select
                            id="source_tracker_id"
                            name="source_tracker_id"
                            required
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        >
                            <option value="">Select a tracker...</option>
                            {% for tracker in trackers %}
                                <option value="{{ tracker.id }}">{{ tracker.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div>
                        <label for="source_role_id" class="block text-sm font-medium text-gray-700 mb-2">
                            Source Role <span class="text-red-500">*</span>
                        </label>
                        <select
                            id="source_role_id"
                            name="source_role_id"
                            required
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        >
                            <option value="">Select a role...</option>
                            {% for role in roles %}
                                <option value="{{ role.id }}">{{ role.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>

            <div class="border-b border-gray-200 pb-4">
                <h5 class="text-sm font-semibold text-gray-700 mb-3">Target Trackers</h5>
                <div class="space-y-2">
                    {% for tracker in trackers %}
                        <div class="flex items-center">
                            <input
                                type="checkbox"
                                id="target_tracker_{{ tracker.id }}"
                                name="target_tracker_ids[]"
                                value="{{ tracker.id }}"
                                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                            >
                            <label for="target_tracker_{{ tracker.id }}" class="ml-2 block text-sm text-gray-700">
                                {{ tracker.name }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div>
                <h5 class="text-sm font-semibold text-gray-700 mb-3">Target Roles</h5>
                <div class="space-y-2">
                    {% for role in roles %}
                        <div class="flex items-center">
                            <input
                                type="checkbox"
                                id="target_role_{{ role.id }}"
                                name="target_role_ids[]"
                                value="{{ role.id }}"
                                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                            >
                            <label for="target_role_{{ role.id }}" class="ml-2 block text-sm text-gray-700">
                                {{ role.name }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="pt-4">
                <button
                    type="submit"
                    class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    onclick="return confirm('This will overwrite existing workflows for the selected targets. Continue?');"
                >
                    Copy Workflow
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
