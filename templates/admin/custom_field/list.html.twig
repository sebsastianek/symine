{% extends 'admin/base.html.twig' %}

{% block title %}{{ type_label }}{% endblock %}
{% block page_title %}{{ type_label }}{% endblock %}

{% block body %}
<div class="flex justify-between items-center mb-6">
    <h3 class="text-lg font-semibold text-gray-900">Manage {{ type_label }}</h3>
    <a href="{{ path('admin_custom_field_new', {type: type}) }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md inline-flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        New {{ type_singular }}
    </a>
</div>

{% if custom_fields is empty %}
    <div class="bg-white rounded-lg shadow p-8 text-center">
        <p class="text-gray-500">No custom fields defined yet. Create the first one.</p>
        <a href="{{ path('admin_custom_field_new', {type: type}) }}" class="mt-4 inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md">
            Create First {{ type_singular }}
        </a>
    </div>
{% else %}
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Position
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Name
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Format
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Required
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        For All
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Searchable
                    </th>
                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for field in custom_fields %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ field.position ?? '-' }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">
                                {{ field.name }}
                            </div>
                            {% if field.description %}
                                <div class="text-xs text-gray-500">
                                    {{ field.description|slice(0, 60) }}{% if field.description|length > 60 %}...{% endif %}
                                </div>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <span class="px-2 py-1 text-xs font-medium rounded bg-gray-100 text-gray-800">
                                {{ field.fieldFormat }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            {% if field.isRequired %}
                                <span class="text-red-600 font-medium">Yes</span>
                            {% else %}
                                <span class="text-gray-400">No</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            {% if field.isForAll %}
                                <span class="text-green-600 font-medium">Yes</span>
                            {% else %}
                                <span class="text-gray-400">No</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            {% if field.searchable %}
                                <span class="text-blue-600 font-medium">Yes</span>
                            {% else %}
                                <span class="text-gray-400">No</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="{{ path('admin_custom_field_edit', {id: field.id}) }}" class="text-blue-600 hover:text-blue-900 mr-3">
                                Edit
                            </a>
                            <form method="post" action="{{ path('admin_custom_field_delete', {id: field.id}) }}" onsubmit="return confirm('Are you sure you want to delete this custom field? All associated custom values will be lost.');" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_custom_field_' ~ field.id) }}">
                                <button type="submit" class="text-red-600 hover:text-red-900">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}

<div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
    <h4 class="text-sm font-semibold text-blue-900 mb-2">About Custom Fields</h4>
    <ul class="text-sm text-blue-800 space-y-1 list-disc list-inside">
        <li>Custom fields allow you to extend {{ type == 'IssueCustomField' ? 'issues' : 'projects' }} with additional data</li>
        <li><strong>Format</strong>: Determines the type of data (string, text, list, date, boolean, etc.)</li>
        <li><strong>Required</strong>: Field must have a value</li>
        <li><strong>For All</strong>: Field is enabled for all {{ type == 'IssueCustomField' ? 'trackers/projects' : 'projects' }}</li>
        <li><strong>Searchable</strong>: Field can be used in search filters</li>
    </ul>
</div>
{% endblock %}
